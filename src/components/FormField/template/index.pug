-
	className = [data.class]
	if (data.value) className.push('is-active')
	if (!data.readonly && data.required) className.push('is-required')
.form-field(class=className)
	.form-field__body
		label.form-field__label(for=data.id) #{data.label}
		input.form-field__input(
			id=data.id
			name=data.name
			value=data.value
			type=data.type || 'text'
			required=data.required
			disabled=data.disabled
			readonly=data.readonly
		)
	if (data.errors)
		ul.form-field__errors
			each error in [].concat(data.errors)
				li.form-field__error #{error}
