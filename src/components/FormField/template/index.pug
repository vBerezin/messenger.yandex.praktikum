include ../../../common/templates/functions/mods

-
	state = []
	if (data.value) state.push('is-active')
	if (!data.readonly && data.required) state.push('is-required')
.form-field(
	class=state
	class=data.class
	class=mods('form-field', data.mods))
	.form-field__body
		if (data.label)
			label.form-field__label(for=data.id) #{data.label}
		input.form-field__input(
			id=data.id
			name=data.name
			value=data.value
			type=data.type || 'text'
			required=data.required
			disabled=data.disabled
			readonly=data.readonly
		)
	if (data.errors)
		ul.form-field__errors
			each error in [].concat(data.errors)
				li.form-field__error #{error}
